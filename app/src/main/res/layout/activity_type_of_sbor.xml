<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TypeOfSbor">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:backgroundTint="#F5F5F5"
            android:drawableLeft="@drawable/iconcolor"
            android:drawableRight="@drawable/iconcolorright"
            android:layout_marginBottom="6dp"
            android:padding="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Целевой сбор"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:backgroundTint="#F5F5F5"
            android:drawableLeft="@drawable/iconcolor1"
            android:drawableRight="@drawable/iconcolorright"
            android:padding="14dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Регулярный сбор"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="6dp"
            android:textAllCaps="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>